<!DOCTYPE html>
<html>
  <head>
    <title>SmartPictor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <h1>SmartPictor</h1>
      <div class="notice"><%= notice %></div>
      <div class="alert"><%= alert %></div>
    </div>
    <div class="content">
      <%= yield %>
    </div>
    <div class="footer">
      <span>Rails on WSL</span>
    </div>
  </body>
</html>
